<RelativeLayout 
    android:layout_height="match_parent" 
    android:layout_width="match_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android">
 
    <com.example.testandroid.ScrollViewContainer android:layout_height="match_parent" android:layout_width="match_parent">
 
        <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">
 
            <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
 
                <LinearLayout android:gravity="center_horizontal" android:id="@+id/imagesLayout" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
                </LinearLayout>
 
                <TextView
                    android:background="#eeeeee" 
                    android:gravity="center" 
                    android:layout_below="@id/imagesLayout" 
                    android:layout_height="60dp" 
                    android:layout_width="match_parent" 
                    android:text="继续拖动，查看更多美女" 
                    >
            </TextView>
            </RelativeLayout>
        </ScrollView>
 
        <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">
 
            <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
 
                <LinearLayout android:gravity="center_horizontal" android:id="@+id/imagesLayout" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
 
                    <ImageView android:background="@drawable/ic_launcher" android:layout_height="300dip" android:layout_width="wrap_content" />
                </LinearLayout>
 
            </RelativeLayout>
        </ScrollView>
    </com.example.testandroid.ScrollViewContainer>
 
</RelativeLayout>